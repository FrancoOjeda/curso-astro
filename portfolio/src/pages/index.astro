---
import Layout from '../layouts/Layout.astro'
import Badge from '../components/Badge.astro'
import SocialPill from '../components/SocialPill.astro'
import Proyects from '../components/Projects.astro'
import SectionContainer from '../components/SectionContainer.astro'
import Contacto from '../components/Contacto.astro'
import Sobremi from '../components/Sobremi.astro'
import Linkedin from '../icons/Linkedin.astro'
import Github from '../icons/Github.astro'
import Mail from '../icons/Mail.astro'
import CodeIcon from '../icons/CodeIcon.astro'
import UserIcon from '../icons/UserIcon.astro'
// import Experience from '../components/Experience.astro'
// import Briefcase from '../icons/Briefcase.astro'
---

<Layout
  title='Porfolio de Franco Ojeda - Desarrollador y Programador Web'
  description='Contrata a Franco Ojeda para desarrollar aplicaciones web a medida de tu negocio, tanto freelance como para el sector privado en relacion de dependencia. 2 años de experiencia y futuro técnico en tecnologias de la informacion'
>
  <main class='px-4'>
    <SectionContainer class='py-44 pb-32'>
      <img
        src='/assets/fotoporfolio.webp'
        alt='Imagen de Franco Ojeda'
        class='rounded-full w-12 h-12 mb-4'
      />

      <h1
        class='text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10'
      >
        Hey, Soy Franco <a
          href='https://www.linkedin.com/in/franco-ojeda-5470b399/'
          target='_blank'
          rel='noopener'
          class='flex justify-center items-center'
        >
          <Badge>Disponible para trabajar</Badge>
        </a>
      </h1>
      <h2
        class='text-xl lg:text-2xl opacity-80 text-wrap max-w-[700px]'
      >
        +2 años estudiando <span class='text-yellow-200/90'
          >Desarrollo Web autodidacta</span
        > y 6 meses cursando la carrera de Tecnologias de la
        informacion de UTN - Facultad Regional Santa Fe. <span
          class='text-red-200/90'
          >De Santa Fe, Argentina</span
        >
      </h2>
      <nav class='flex flex-row gap-4 mt-8 flex-wrap'>
        <SocialPill
          href='https://www.linkedin.com/in/franco-ojeda-5470b399/'
        >
          <Linkedin class='w-4 h-4 md:w-6 lg:h-6' />
          LinkedIn
        </SocialPill>

        <SocialPill href='https://github.com/FrancoOjeda'>
          <Github class='w-4 h-4 md:w-6 lg:h-6' />
          Github
        </SocialPill>
        <SocialPill href='mailto:24martin94@gmail.com'>
          <Mail class='w-4 h-4 md:w-6 lg:h-6' />
          24martin94@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>
    <!-- <SectionContainer id='proyectos'>
      <h2
        class='text-3xl font-semibold mb-6 flex gap-x-3 items-center'
      >
        <Briefcase class='size-8' />
        Proyectos
      </h2>
      <Experience />
    </SectionContainer> -->
    <SectionContainer id='proyectos'>
      <h2
        class='text-3xl font-semibold mb-6 flex gap-x-3 items-center'
      >
        <CodeIcon class='size-8' />
        Proyectos
      </h2>
      <Proyects />
    </SectionContainer>
    <SectionContainer id='about'>
      <h2
        class='text-3xl font-semibold mb-6 flex gap-x-3 items-center'
      >
        <UserIcon class='size-7' />
        Sobre mí
      </h2>
      <Sobremi />
    </SectionContainer>
    <SectionContainer id='contacto'>
      <Contacto />
    </SectionContainer>
  </main>
</Layout>
